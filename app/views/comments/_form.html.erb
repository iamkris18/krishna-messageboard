<!-- app/views/comments/_form.html.erb -->
<div class="card my-4">
  <div class="card-body">
    <%= simple_form_for([@message, @message.comments.build]) do |f| %>
      <div class="mb-3">
        <%= f.input :content, label: "Comment", input_html: { class: "form-control", rows: 4 } %>
      </div>
      <div class="text-end">
        <%= f.button :submit, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
