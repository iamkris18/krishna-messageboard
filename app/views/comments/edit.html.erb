<!-- app/views/comments/edit.html.erb -->
<div class="container">
  <h1 class="my-4">Edit Comment</h1>

  <div class="card">
    <div class="card-body">
      <%= simple_form_for([@message, @comment]) do |f| %>
        <div class="mb-3">
          <%= f.input :content, label: "Comment", input_html: { class: "form-control", rows: 4 } %>
        </div>
        <div class="text-end">
          <%= f.button :submit, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="mt-3">
    <%= link_to 'Back to Message', message_path(@message), class: "btn btn-secondary" %>
  </div>
</div>
