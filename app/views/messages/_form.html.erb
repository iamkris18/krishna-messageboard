<!-- app/views/messages/new.html.erb -->
<div class="container">
  <h1 class="my-4">Create a New Message</h1>

  <%= simple_form_for @message, html: { class: "form-message" } do |f| %>
    <div class="mb-3">
      <%= f.input :title, label: "Message Title", input_html: { class: "form-control" } %>
    </div>

    <div class="mb-3">
      <%= f.input :description, label: "Description", input_html: { class: "form-control", rows: 4 } %>
    </div>

    <%= f.button :submit, class: "btn btn-primary" %>
  <% end %>

  <div class="mt-3">
    <%= link_to 'Back to Messages', messages_path, class: "btn btn-secondary" %>
  </div>
</div>
